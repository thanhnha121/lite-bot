@model dynamic
@{
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - LiteBot</title>
    <link rel="shortcut icon" type="image/png" href="/Assets/img/new-logo.png" />
    @Styles.Render("~/Content/css")
</head>
<body class="not-default">

    <div ng-app="LiteBot" ng-controller="LoginController">
        
        <div class="uk-margin-top" style="width: 100%; text-align: center;">
            <a href="/"><img src="~/Assets/img/new-logo.png" style="width: 100px;" /></a>
        </div>

        <div class="uk-child-width-1-3@m uk-grid-match uk-grid uk-margin-medium-top" uk-grid>
            <div>
            </div>
            <div>
                <div class="uk-card uk-card-default uk-card-hover">
                    <div class="uk-card-body">
                        <h3 class="uk-card-title">{{Lang.LoginModule.Header}}</h3>
                        <p>
                            <input class="uk-input" type="text" placeholder="{{Lang.LoginModule.PlaceHolderUserName}}">
                        </p>
                        <p>
                            <input class="uk-input" type="password" placeholder="{{Lang.LoginModule.PlaceHolderPassword}}">
                        </p>
                        <p uk-margin="">
                            <a class="uk-button uk-button-default uk-first-column">{{Lang.LoginModule.ButtonLogin}}</a>
                            <a class="uk-button uk-button-text uk-margin-small-left" href="/Register">{{Lang.LoginModule.RegisterTitle}}</a>
                        </p>
                    </div>
                </div>
                
                <div class="uk-width-1-1 uk-margin"><a class="uk-width-1-1 uk-button uk-background-primary"
                                                       style="color: #fff;">
                    Login with your Facebook account
                </a></div>

                <div class="uk-child-width-1-2@m uk-grid-match uk-grid" uk-grid>
                    <div>
                        <language></language>
                    </div>
                    <div>
                        <a class="uk-link-muted uk-align-right@m" href="/ForgotPassword" style="margin-top: 7px;">{{Lang.LoginModule.ForgotUrlTitle}}</a>
                    </div>
                </div>
            </div>
            <div>
            </div>
        </div>

        <footer></footer>
    </div>

    @Scripts.Render("~/bundles/js")
    @Scripts.Render("~/bundles/jqueryval")
</body>
